<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoadingFragment">

    <ImageView
        android:layout_width="@dimen/level_logo_size"
        android:layout_height="@dimen/level_logo_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/level_logo_margin_top"
        android:src="@drawable/logo_circle_grey" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/loading_progressbar"
            android:layout_margin="40dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:rcProgress="15"
            app:rcMax="100"
            app:rcRadius="25dp"
            app:rcBackgroundPadding="5dp"
            app:rcProgressColor="@color/accent"
            app:rcBackgroundColor="@color/primary" />
    </FrameLayout>
</LinearLayout>
